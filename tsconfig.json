  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "nehemiah": [
        "src/index"
      ]
    },
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "types": []
  },
  "include": [
    "src"
  ]
}
